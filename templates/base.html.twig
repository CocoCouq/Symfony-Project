    <ul class="sidenav grey darken-4" id="mobile-demo">
        <li><a class="white-text" href="{{ path('home') }}">Home</a></li>
        <li><a class="white-text" href="{{ path('games.index') }}">All games</a></li>
        <li><a class="white-text" href="{{ path('games.addGame') }}">New game</a></li>
